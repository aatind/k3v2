apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: nfs-backup
  namespace: nfs-provisioner
spec:
  chart: nfs-subdir-external-provisioner
  repo: https://kubernetes-sigs.github.io/nfs-subdir-external-provisioner
  targetNamespace: nfs-provisioner
  set:
    nfs.server: 192.168.31.31
    nfs.path: /mnt/Z2/Minio-destination
    storageClass.name: nfs-backup
    storageClass.reclaimPolicy: Retain
    storageClass.provisionerName: k8s-sigs.io/nfs-backup
